   \setbox\@tempboxb=\hbox{#1}%
   \ifdim\@tempdima<\ht\@tempboxb\@tempdima=\ht\@tempboxb\fi
   \ifdim\@tempdimb<\dp\@tempboxb\@tempdimb=\dp\@tempboxb\fi
   \vrule height \@tempdima width 0pt depth \@tempdimb
}
